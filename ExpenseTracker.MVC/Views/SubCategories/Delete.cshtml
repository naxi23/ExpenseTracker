@model ExpenseTracker.Domain.Entities.SubCategory

@{
    ViewData["Title"] = "Delete";
}


<div>
    <h5>Delete SubCategory</h5>
    <hr />
    <h6>Are you sure you want to delete this sub category : @Html.DisplayFor(model => model.SubCategoryName)?</h6>
   
    <form asp-action="Delete" class="d-flex gap-2">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
        <a class="btn btn-warning btn-sm" asp-action="Index">Back</a>
    </form>
</div>

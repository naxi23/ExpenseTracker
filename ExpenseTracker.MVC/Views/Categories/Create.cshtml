@model ExpenseTracker.Domain.Entities.Category
@{
    ViewData["Title"] = "Create";
}
<div class="mw-100 m-4">
    <h5>Add Category</h5>
    <div class="row">
        <div class="col-md-4">
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label">Name</label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                @* <div class="form-group mt-2">
                    <label asp-for="SubCategoryID" class="control-label">Sub Category</label>
                    <select asp-for="SubCategoryID" class="form-control" asp-items="ViewBag.SubCategoryID"></select>
                </div> *@
                <div class="form-group mt-4 d-flex gap-2">
                    <input type="submit" value="Add" class="btn btn-primary" />
                    <a class="btn btn-warning" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

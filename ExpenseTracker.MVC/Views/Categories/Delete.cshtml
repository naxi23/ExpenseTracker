@model ExpenseTracker.Domain.Entities.Category

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h5>Delete Category</h5>
    <hr />
    <h6>Are you sure you want to delete this category : @Html.DisplayFor(model => model.CategoryName)?</h6>

    <form asp-action="Delete" class="d-flex gap-2">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
        <a class="btn btn-warning btn-sm" asp-action="Index">Back</a>
    </form>
</div>